<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students Table</title>
</head>
<body>
    <h1>Students</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Course</th>
                <th>Email</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (students.length > 0) { %>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.id %></td>
                        <td><%= student.name %></td>
                        <td><%= student.course %></td>
                        <td><%= student.email %></td>
                        <td><%= student.age %></td>
                        <td>
                            <a href="/students/update/<%= student.id %>">Edit</a>
                            <form action="/students/delete/<%= student.id %>" method="post" style="display:inline;">
                                <button style="background-color:red; color:white;" type="submit" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="6" style="text-align: center;">No students found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>

<style>
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: sans-serif;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: lightgray;
            font-weight: bold;
        }
    </style>